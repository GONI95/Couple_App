<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hi"
    tools:context=".Home">

  <ImageView
      android:id="@+id/illustration"
      android:layout_width="300dp"
      android:layout_height="300dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:scaleType="fitXY"
      android:src="@drawable/illustration"
      app:layout_constraintBottom_toTopOf="@+id/Calculate_days"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/Calculate_days"
      android:layout_width="0dp"
      android:layout_height="27dp"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text=""
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/Dday_100"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/illustration" />

  <TextView
      android:id="@+id/Dday_100"
      android:layout_width="0dp"
      android:layout_height="27dp"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text=""
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/Dday_200"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Calculate_days" />

  <TextView
      android:id="@+id/Dday_200"
      android:layout_width="0dp"
      android:layout_height="27dp"
      android:layout_marginStart="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text=""
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Dday_100" />

</androidx.constraintlayout.widget.ConstraintLayout>